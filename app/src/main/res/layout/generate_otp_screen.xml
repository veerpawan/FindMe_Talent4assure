<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#3666c7"
    android:weightSum="1"
    tools:context=".Activity.OTP_Screen"

    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/otp1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sit back and Relax! while we verify your mobile number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Enter the OTP below in case if we fail to detect the SMS automatically)"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/otp_message"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:hint="Enter OTP"
        android:layout_weight="0.05" />

    <Button
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:background="#000066"
        android:textColor="#ffffff"
        android:id="@+id/btn_reg"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00" />

</LinearLayout>